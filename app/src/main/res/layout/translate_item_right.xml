<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/translate_item_uk_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@mipmap/uk_logo" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/translate_item_uk_img"
        android:background="@drawable/translate_result_right_bg"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp">

        <RelativeLayout
            android:id="@+id/translate_item_left_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:paddingRight="33dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/translate_item_cn_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="中文" />

            <TextView
                android:id="@+id/translate_item_en_txv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/translate_item_cn_txv"
                android:layout_marginTop="16dp"
                android:text="Chinese" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/translate_item_right_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/translate_item_left_layout"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/translate_item_more_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/more_ic"
                android:foreground="?android:attr/actionBarItemBackground" />

            <ImageView
                android:id="@+id/translate_item_listen_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/translate_item_more_img"
                android:layout_marginTop="16dp"
                android:background="@mipmap/volumn_ic"
                android:foreground="?android:attr/actionBarItemBackground" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>