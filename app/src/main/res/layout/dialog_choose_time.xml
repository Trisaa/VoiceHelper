<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FAFAFA">

    <RelativeLayout
        android:id="@+id/account_update_edit_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp">

        <TextView
            android:id="@+id/account_update_title_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="时间"
            android:textColor="#DE000000"
            android:textSize="20sp" />

        <TimePicker
            android:id="@+id/alarm_choose_time_picker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp" />

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/account_update_submit_ll"
        android:layout_width="82dp"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/account_update_edit_rl"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="26dp"
        android:background="?android:attr/selectableItemBackground"
        android:gravity="center">

        <TextView
            android:id="@+id/account_update_submit_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交"
            android:textColor="@color/account_update_submit"
            android:textSize="14sp" />
    </LinearLayout>
</RelativeLayout>
